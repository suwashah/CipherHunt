@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Cpanel/Views/Shared/_MasterLayout2.cshtml";
}
<style>
    .card-title {
        margin-bottom: 10px !important;
        font-weight: bold;
        color: #656565;
    }

    .card-stats .card-footer {
        padding: 0 !important;
        margin-top: 18px;
    }

    .card .card-footer {
        background-color: transparent;
        border: none !important;
        border-top: 1px solid #ebebeb !important;
        /* border: 0; */
    }

    .card-footer .stats a {
        display: block;
        padding: 20px !important;
        border-radius: 0px 0px 10px 10px;
        color: #2b94f8 !important;
        font-size: 14px;
        font-weight: bold;
    }

        .card-footer .stats a:hover {
            background: #e2e2e2;
            text-decoration: none;
        }
</style>
<div class="row">
    <div class="col-md-12">
        <header>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" preserveAspectRatio="none">
                <polygon class="svg--sm" fill="white" points="0,0 30,100 65,21 90,100 100,75 100,100 0,100" />
                <polygon class="svg--lg" fill="white" points="0,0 15,100 33,21 45,100 50,75 55,100 72,20 85,100 95,50 100,80 100,100 0,100" />
            </svg>
        </header>
        <div class="row">
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="card card-stats">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-7 col-md-8">
                                <div class="numbers">
                                    <p class="card-title">Email Templates</p>
                                    <p class="card-category">
                                        Create email template to send the email content defined in email template.
                                    </p>
                                </div>
                            </div>
                            <div class="col-5 col-md-4">
                                <div class="icon-big text-center icon-warning">
                                    <img height="70" src="@Url.Content("~/Images/Settings/Profile.svg")" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer ">
                        <div class="stats primary-text">
                            <a href="@Url.Action("Index","EmailTemplate")">Customize your email template</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="card card-stats">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-7 col-md-8">
                                <div class="numbers">
                                    <p class="card-title">Account</p>
                                    <p class="card-category">
                                        Highly recommend to fill all your details to complete your transactions.
                                    </p>
                                </div>
                            </div>
                            <div class="col-5 col-md-4">
                                <div class="icon-big text-center icon-warning">
                                    <img height="70" src="@Url.Content("~/Images/Settings/Profile.svg")" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer ">
                        <div class="stats primary-text">
                            <a href="#">Update your account</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="card card-stats">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-7 col-md-8">
                                <div class="numbers">
                                    <p class="card-title">Security</p>
                                    <p class="card-category">
                                        It's a good idea to use a strong password that you don't use elsewhere.
                                    </p>
                                </div>
                            </div>
                            <div class="col-5 col-md-4">
                                <div class="icon-big text-center icon-warning">
                                    <img height="70" src="@Url.Content("~/Images/Settings/key.svg")" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer ">
                        <div class="stats primary-text">
                            <a href="@Url.Action("ChangePassword","Authentication")">Change your password</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

