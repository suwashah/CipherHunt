@model IEnumerable<Repository.Common.StaticDataType>

@{
    ViewBag.Title = "Static Data List";
}
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <span class="form-title">Static Data list</span>
            <br /><br />
        </div>
    </div>
</div>
<div class="box-card">
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th width="100">
                            Static ID
                        </th>
                        <th width="200">
                            Name
                        </th>
                        <th>
                            Description
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    
                    @foreach (var item in Model)
                    {   
                        <tr id="td_@Html.Raw(item.TYPE_ID)">
                            <td>
                                @item.TYPE_ID
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TYPE_NAME)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TYPE_DESCRIPTION)
                            </td>                            
                            <td class="right-text">
                                <a href="@Url.Action("StaticDatas","Utilities",new { route = @Html.Raw(CipherHunt.Library.StaticData.Encrypt("id=" + item.TYPE_ID)) })" class="btn btn-sm btn-primary btn-round">View <i class="fa fa-chevron-right"></i></a>
                                @*@Html.ActionLink("View", "StaticDatas", "Utilities", new { route = @Html.Raw(CipherHunt.Library.StaticData.Encrypt("id=" + item.TYPE_ID)) }, new { @class = "btn btn-sm btn-primary btn-round" })*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
