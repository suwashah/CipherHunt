@model CipherHunt.Areas.Cpanel.Models.CpanelLoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Cpanel/Views/Shared/_LoginLayout.cshtml";
}
<style>
    /*.sweet-overlay {
        background-color: black !important;
    }*/
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="login-panel2">
        <div class="row">
            <div class="col-md-12">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group center-text">
                    <img height="70" src="@Url.Content("~/images/Logo/logo.png")" alt="Logo">
                    <br />
                    <h4>CPanel Login</h4>
                    <br /><br />
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.UserName, "Username*", new { @class = "" })
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", autocomplete = "off" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, "Password*", new { @class = "" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", autocomplete = "off" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <div class="form-group text-center mt-4">
                    <input type="submit" id="btnSubmit" value="Login" style="font-size:18px !important;" class="btn btn-primary btn-unique btn-round btn-block" />
                    <br/>
                    <a href="/" class="pull-right"><i class="fa fa-chevron-right"></i> Go to website</a>
                </div>
            </div>
        </div>
    </div>
}
<div id="progress" class="modal_loader">
    <div class="center">
        <center>
            @Html.Partial("_Partial/_Loader")
        </center>
        <br />Please wait...
    </div>
</div>
@section scripts{
    @Html.Partial("_Partial/_AccessAlert")
    @if (ViewBag.Message != null)
    {
        <script>
            SweetAlertMsg('Message', '@ViewBag.Message', 'error');
        </script>
    }
    @if (ViewBag.SuccessMessage != null)
    {
        <script>
            SweetAlertMsg('Message', '@ViewBag.SuccessMessage', 'success');
        </script>
    }
}
