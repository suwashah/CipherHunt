@model CipherHunt.Areas.Cpanel.Models.ApplicationViewModel
@{
    ViewBag.Title = "Index";
}
<style>
    .numbers .card-title {
        font-size: 40px !important;
        color: #50b7b9;
    }
</style>
<div class="row">
    <div class="col-md-6">
        <div class="card card-chart wow fadeInDown" data-wow-delay="0.6s">
            <div class="card-header">
            </div>
            <div class="card-body center-text" style="height:350px">
                <canvas id="myChart1" aria-label="Test" role="img"></canvas>
                <div id="chartDiv"></div>
                <div ng-init="DrawWeeklyGraph('chartDiv')">
                </div>
                <div class="custom-control custom-radio custom-control-inline">
                    <input id="line" class="custom-control-input" type="radio" name="GraphType" ng-model="GraphType" ng-click="DrawWeeklyGraph('chartDiv')" value="line" />
                    <label class="custom-control-label" for="line">Line</label>
                </div>
                <div class="custom-control custom-radio custom-control-inline">
                    <input id="bar" class="custom-control-input" type="radio" name="GraphType" ng-model="GraphType" ng-click="DrawWeeklyGraph('chartDiv')" value="bar" />
                    <label class="custom-control-label" for="bar">Bar</label>
                </div>
