
@if (User.Identity.IsAuthenticated && User.IsInRole("User"))
{

    <li class="dropdown">
        <a href="#"><span>@CurrentUser.Name</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
        <ul>
            <li><a href="#">User ID: @CurrentUser.ID </a></li>
            <li><a href="@Url.Action("PlayerScoreBoard","Home")">Go to Dashboard</a></li>            
            <li><a href="@Url.Action("History","UserChallenge")">Your Challenges History</a></li>
            <li><a href="@Url.Action("Logout","Account")">Sign out</a></li>

        </ul>
    </li>



}
else
{
    <li><a href="@Url.Action("SignUp","Account")">Signup</a></li>
    <li><a href="@Url.Action("Login","Account")">Login</a></li>

}
